<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    
    
    
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.jiang.filiter.characterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>sysFilter</filter-name>
        <filter-class>com.jiang.filiter.sysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.jiang.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.jiang.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/jsp/logout.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updatePwd</servlet-name>
        <servlet-class>com.jiang.servlet.UpdatePwd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatePwd</servlet-name>
        <url-pattern>/jsp/user.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAlluser</servlet-name>
        <servlet-class>com.jiang.servlet.GetAllUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAlluser</servlet-name>
        <url-pattern>/getAllUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateUserPwd</servlet-name>
        <servlet-class>com.jiang.servlet.UpdateUserPwd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateUserPwd</servlet-name>
        <url-pattern>/jsp/user.do1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.jiang.servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/adduser.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllCourseervlet</servlet-name>
        <servlet-class>com.jiang.servlet.getAllCourseervlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCourseervlet</servlet-name>
        <url-pattern>/getallcourse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>com.jiang.servlet.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/addcourse.do</url-pattern>
    </servlet-mapping>
</web-app>